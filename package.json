{
  "name": "@modusoperandi/licit-custom-styles",
  "version": "1.1.0",
  "license": "MIT",
  "type": "module",
  "subversion": "1",
  "description": "CustomStyle plugin built with ProseMirror",
  "main": "index.js",
  "style": "styles.css",
  "types": "index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MO-Movia/licit-plugin-contrib-styles.git"
  },
  "scripts": {
    "test": "jest",
    "test:unit": "jest",
    "test:coverage": "jest --coverage",
    "build:clean": "rm -rf dist/ && rm -f modusoperandi-licit-customstyles-*.*.*.tgz",
    "lint": "eslint src --max-warnings=68",
    "ci:build": "tsc --build && copyfiles --up 1 \"src/**/*.css\" dist  && copyfiles package.json LICENSE .npmignore dist  && copyfiles --up 1 \"src/fonts/**\" dist ",
    "ci:bom": "cyclonedx-npm --ignore-npm-errors --short-PURLs --output-format XML --output-file dist/bom.xml",
    "verify": "npm run lint -- --fix && npm run ci:build && npm run test:coverage && echo 'All Tests Passed!'"
  },
  "peerDependencies": {
    "@modusoperandi/licit-doc-attrs-step": "^1.0.2",
    "@modusoperandi/licit-ui-commands": "^1.0.11",
    "prosemirror-model": "^1.0.0",
    "prosemirror-state": "^1.0.0",
    "prosemirror-transform": "^1.0.0",
    "prosemirror-utils": "^1.0.0",
    "prosemirror-view": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "uuid": "^11.0.0",
    "classnames": "^2.3.1",
    "color": "^5.0.0"
  },
  "devDependencies": {
    "@cyclonedx/cyclonedx-npm": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/jest": "^29.1.2",
    "copyfiles": "^2.4.1",
    "eslint": "^9.24.0",
    "@modusoperandi/eslint-config": "^2.1.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-prosemirror": "^3.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "prettier": "^3.2.4",
    "prosemirror-test-builder": "^1.1.1",
    "prosemirror-schema-basic": "^1.2.4",
    "ts-jest": "^29.0.7",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.4.0",
    "typescript": "^5.8.3"
  },
  "overrides": {
    "libxmljs2": "^1.0.0"
  }
}